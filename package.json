{
  "name": "toy-robot-simulator",
  "version": "1.0.0",
  "description": "REA code challenge",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=development babel-node --silent --presets es2015 src/app.js",
    "start:production": "NODE_ENV=production babel-node --presets es2015 src/app.js",
    "test": "NODE_ENV=testing ./node_modules/.bin/_mocha --recursive tests --compilers js:babel-core/register",
    "test:e2e": "./node_modules/.bin/_mocha e2e.test.js --compilers js:babel-core/register",
    "test:coverage": "NODE_ENV=testing ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha tests tests/**/*.js -- --require babel-register"
  },
  "author": "anonymous",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^5.2.0",
    "sinon": "^6.2.0"
  },
  "dependencies": {
    "nixt": "^0.5.1"
  }
}
